{
    "extends": "airbnb",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "comma-dangle": 0,
        "indent": [2, 4, {"SwitchCase": 1}],
        "max-len": 0,

        "react/jsx-indent": [2, 4],
        "react/jsx-indent-props": [2, 4],
        "react/prop-types": [2, { "ignore": ["children"] }],
    },
    "globals": {
        "componentHandler": true
    }
}
